block simple_nav
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
        a.navbar-brand(href=menu[0][1])
            img.d-inline-block.align-top(src='/images/logo.png' width='30' height='30' alt='logo')
            | &nbsp;HueicAccessControl
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
            ul.navbar-nav.mr-auto
                each val, key in menu
                    if key < 3
                        if selected === val[1]
                            li.nav-item.active
                                a.nav-link(href=val[1])= val[0] 
                                    span.sr-only (current)
                        else
                            li.nav-item
                                a.nav-link(href=val[1])= val[0]
            ul.nav.navbar-nav.ml-auto
                li.mr-2
                    form(action=menu[3][1] method='get')
                        input.btn.btn-primary(type='submit' value='Nhận dạng biển số')
                li.nav-item.dropdown
                    a#navbarDropdown.btn.btn-success.dropdown-toggle(href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                        span.fas.fa-user
                        | &nbsp;&nbsp;
                        = user.account
                    .dropdown-menu(aria-labelledby="navbarDropdown")
                        a.dropdown-item(href="/profile/" + user.account)
                            span.fas.fa-user-circle
                            | &nbsp;&nbsp;
                            | Tài khoản
                        .dropdown-divider
                        a.dropdown-item(href="/logout")
                            span.fas.fa-sign-out-alt
                            | &nbsp;&nbsp;
                            | Đăng xuất